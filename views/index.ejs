<% include partials/header%>
<div class="container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp<i class="tree icon"></i></h1>
            <p>View our special campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large"href="/campgrounds/new">Add a Campground</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% campgrounds.forEach(function(campground){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src = "<%= campground.image%>">
                    <div class="caption">
                        <h4><%= campground.name%></h4>
                    </div>
                    <p><%=campground.description.substring(0,20)%>..</p>
                    <div>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">Show Details</a>
                    </div>
                </div>
            </div>
        <% });%>
    </div>
</div>

<% include partials/footer%>